{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": ["./src/**/*.ts", "./__tests__/**/*.test.ts"],
  "exclude": ["dist"]
}
